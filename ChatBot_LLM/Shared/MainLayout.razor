@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="main">
        <div class="top-row px-4">
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">X</a>
</div>

<style>
    .page {
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    .sidebar {
        width: 100px;
        background-color: #310D6A;
        color: white;
        padding: 0;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        box-shadow: 2px 0 5px rgba(0,0,0,0.2);
    }

    .main {
        flex-grow: 1;
        display: 0;
        flex-direction: column;
        background-color: #f8f9fa;
        overflow-y: auto;
    }

    .top-row {
        background-color: #ffffff;
        border-bottom: 1px solid #dee2e6;
        height: 60px;
        display: flex;
        align-items: center;
        padding: 0 20px;
    }

    .content {
        flex-grow: 1;
        padding: 20px;
    }
</style>