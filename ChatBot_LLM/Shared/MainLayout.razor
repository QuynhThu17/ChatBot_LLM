@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="main">
        <div class="top-row px-4">
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">X</a>
</div>

<style>
    /* Bạn có thể đặt một số CSS cơ bản cho layout ở đây hoặc trong site.css */
    .page {
        display: flex;
        height: 100vh; /* Chiều cao đầy đủ của viewport */
        overflow: hidden; /* Ngăn chặn scroll tổng thể */
    }

    .sidebar {
        width: 250px; /* Chiều rộng của sidebar */
        background-color: #310D6A; /* Màu nền sidebar theo mẫu */
        color: white;
        padding: 0;
        display: flex;
        flex-direction: column;
        overflow-y: auto; /* Cho phép scroll nếu nội dung sidebar dài */
        box-shadow: 2px 0 5px rgba(0,0,0,0.2); /* Tạo bóng */
    }

    .main {
        flex-grow: 1; /* Chiếm phần còn lại của không gian */
        display: flex;
        flex-direction: column;
        background-color: #f8f9fa; /* Màu nền chính */
        overflow-y: auto; /* Cho phép scroll nội dung chính */
    }

    .top-row {
        background-color: #ffffff; /* Màu nền header */
        border-bottom: 1px solid #dee2e6;
        height: 60px; /* Chiều cao top-row */
        display: flex;
        align-items: center;
        padding: 0 20px;
    }

    .content {
        flex-grow: 1;
        padding: 20px;
    }

    /* Các kiểu CSS khác có thể đặt trong site.css */
</style>